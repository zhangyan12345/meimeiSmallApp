@import "select-sex-temp/select-sex-temp.wxss";

page{
    overflow-y: hidden;
}
.user-head-box{
    width: 100%;
    background: #efefef;
    height: 300rpx;
    display: block;
    position: relative;
}
.user-avatar{
    width: 198rpx;
    height: 183rpx;
    position: absolute;
    left: 50%;
    margin-left: -99rpx;
    top: 0rpx;
}
.user-head-box .image{
    width: 198rpx;
    height: 198rpx;
    padding: 100rpx auto;
    text-align: center;
    display: flex;
    flex: 1;
    position: absolute;
    left: 50%;
    margin-left: -99rpx;
    top: 60rpx;
    background-size:cover;
    border-radius: 50%;

}

.user-setting-item{
    width:100%;
    height: 88rpx;
    line-height: 88rpx;
    border-bottom: 1rpx solid #f2f3f3;
    position: relative;
}
.user-settings-text{
    position: absolute;
    left: 35rpx;
    font-size: 26rpx;
    color: #000;
}
.user-settings-input{
     position: absolute;
     top:0rpx;
    right:68rpx;
    text-align: right;
    height: 88rpx;
    line-height: 88rpx;
    font-size:30rpx;
    font-family: "微软雅黑";
}
.user-setting-item-msg{
    position: absolute;
    top:0rpx;
    right:68rpx;
    height: 88rpx;
    line-height:88rpx;
    font-size:30rpx;
    font-family: "微软雅黑";
}

.user-setting-item .arrow-left-icon{
    position: absolute;
    top:24rpx;
    right:18rpx;
    width: 40rpx;
    height: 40rpx;
}
.user-settings-btn{
    width:94%;
    position: fixed;
    left: 3%;
    bottom: 20rpx;
    height: 92rpx;
    line-height: 92rpx;
    color: #fff;
    text-align: center;
    background: #080404;
}
.user-settings-btn button{
    background: none;
    color: #fff;
}

.scb{
    z-index: 100;
    position: absolute;
    left:100%;
    top:0rpx;
    width: 100%;
    height: 100%;
}
.select-city-mask{
    position: absolute;
    top:0px;
    left:0px;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
}
.select-city-box{
    background: #fff;
    width:480rpx;
    height: 200rpx;
    position: absolute;
    left: 50%;
    margin-left:-240rpx;
    top:50rpx;
    z-index: 21;
    border-radius: 15rpx;
}
.select-city-item{
    display: inline-block;
    width: 100%;
    line-height: 100rpx;
    height: 100rpx;
    border-bottom: 1px solid #efefef;
    font-size: 30rpx;
    text-indent: 20rpx;
}
.select-city-item:last-child{
    border:none;
}
.user-setting-getMsg{
    float: right;
    margin-right:68rpx; 
    font-size:30rpx;
    font-family: "微软雅黑";
}
.user-setting-getImage{
    width:118rpx;
    height: 67rpx;
    float: right;
    margin-right:8rpx;
    margin-top:10rpx;
}



